<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Deaddit.Components"
             x:Class="Deaddit.Pages.PostPage">
    <ScrollView
        x:Name="scrollView">
        <VerticalStackLayout
            x:Name="mainStack"
            VerticalOptions="Fill"
            Padding="0"
            Spacing="0">

            <Grid
                x:Name="actionButtonsGrid"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Start"
                BackgroundColor="{Binding HighlightColor}"
                Margin="0"
                Padding="0"
                ColumnDefinitions="*,*,*,*,*">

                <Button
                    Text="Back"
                    x:Name="backButton"
                    Grid.Column="0"
                    Clicked="OnBackClicked"
                    BackgroundColor="Transparent" />

                <Button
                    Text="Share"
                    x:Name="shareButton"
                    Grid.Column="1"
                    Clicked="OnShareClicked"
                    BackgroundColor="Transparent" />

                <Button
                    Text="Save"
                    x:Name="saveButton"
                    Grid.Column="2"
                    Clicked="OnSaveClicked"
                    BackgroundColor="Transparent" />

                <Button
                    Text="..."
                    x:Name="moreButton"
                    Grid.Column="3"
                    Clicked="OnMoreOptionsClicked"
                    BackgroundColor="Transparent" />

                <Button
                    Text="Reply"
                    x:Name="replyButton"
                    Grid.Column="4"
                    Clicked="OnReplyClicked"
                    BackgroundColor="Transparent" />
            </Grid>

            <Border
                x:Name="postBodyBorder"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 5,5,5,5"
                Padding="10"
                HorizontalOptions="Center">
                <components:MarkdownView
                    x:Name="postBody"
                    Margin="5"
                    BackgroundColor="Transparent"
                    OnHyperLinkClicked="OnHyperLinkClicked">
                </components:MarkdownView>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>